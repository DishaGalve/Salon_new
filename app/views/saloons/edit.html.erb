<h1>Edit Salon</h1>

<%= form_with model: @saloon do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    
  </div>
  <div>
    <%= form.label :address %><br>
    <%= form.text_field :address %><br>
  </div>
   <div>
    <%= form.label :opening %><br>
    <%= form.text_field :opening %><br>
  </div>
   <div>
    <%= form.label :closing %><br>
    <%= form.text_field :closing %><br>
  </div>
 
  <div>
    <%= form.submit %>
  </div>
  
<% end %>